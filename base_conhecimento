from pyDatalog import pyDatalog

# Definindo a base de conhecimento
pyDatalog.create_terms('pai, filho')

# Regras
+ pai('João', 'Carlos')
+ pai('Carlos', 'Maria')
+ pai('Carlos', 'Pedro')

# Consultas
if pai('João', 'Carlos'):
    print('João é pai de Carlos')
else:
    print('João não é pai de Carlos')

if pai('Carlos', 'Maria'):
    print('Carlos é pai de Maria')
else:
    print('Carlos não é pai de Maria')

if pai('João', 'Maria'):
    print('João é pai de Maria')
else:
    print('João não é pai de Maria')

